<%- layout('layouts/boilerplate') %>

<div id="cluster-map"></div>
<h1>All Campgrounds</h1>
<div>
    <a href="/campgrounds/new">Add a campground</a>
</div>

<% for (let campground of campgrounds) { %>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <% if (campground.images.length) { %>
            <img src="<%= campground.images[0].url %>" alt="image of this campground" class="img-fluid">
            <% } else { %>
            <img src="https://res.cloudinary.com/doemj9gq6/image/upload/v1645206287/YelpCamp/default_zqxkfd.jpg"
                alt="default image" class="img-fluid">
            <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">
                    <%= campground.title %>
                </h5>
                <p class="card-text">
                    <%= campground.description %>
                </p>
                <p class="card-text">
                    <small class="text-muted"><%= campground.location %> </small>
                </p>
                <a href="/campgrounds/<%= campground._id %> " class="btn btn-primary">View <%= campground.title %> </a>
            </div>
        </div>
    </div>
</div>
<% } %>

<script>
    const mbToken = '<%-process.env.MAPBOX_TOKEN %>';
    const campgrounds = '<%- JSON.stringify(campgrounds) %>';
</script>

<script src="/scripts/clusterMap.js"></script>